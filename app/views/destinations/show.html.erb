<h1><%= @destination.name %></h1>
<h3><%= @destination.country %></h3>
<h3>Average age of blogger: <%= @destination.average_age %></h3>

<div><%= link_to @destination.featured_post.title, post_path(@destination.featured_post) %></div>

<h4>Most Recent Posts:</h4>
<ul>
<% @destination.most_recent.each do |post| %>
    <li><%= post.title %><br>
    Likes: <%= post.likes %><br>
    <br></li>
<% end %>
</ul>